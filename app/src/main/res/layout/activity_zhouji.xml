<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".activity.zhoujiActivity">
    <ProgressBar
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:id="@+id/processsdsd"
        android:progressDrawable="@drawable/progressbar_horizontal_1"
        />
    <RelativeLayout
        android:id="@+id/diyige"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/te1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:text="取消"
            android:textSize="15dp" />

        <TextView
            android:layout_marginLeft="-50dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/zhouji_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_toRightOf="@+id/te1"
            android:gravity="center"
            android:text="2018.10.23" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/diyige"
        android:id="@+id/dierge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/bioo"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >
            <EditText
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="撰写标题"
                android:id="@+id/zhouji_head"
                android:background="@null"
                ></EditText>
        </LinearLayout>
        <EditText
            android:layout_below="@+id/bioo"
            android:gravity="top"
            android:maxHeight="400dp"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/zhouji_body"
            android:textSize="15dp"
            android:hint="撰写你的美好一天"
            android:background="@null"
            android:focusable="true"
            />
    </RelativeLayout>

   <RelativeLayout
       android:layout_below="@+id/dierge"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       >
    <RelativeLayout
        android:id="@+id/disige"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <FrameLayout
            android:id="@+id/xuanzetupain"
            android:layout_margin="10dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            >
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerInside"
                android:background="@drawable/xuxian"
                />
            <ImageView
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/jiahao"
                />
        </FrameLayout>
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
           android:layout_toRightOf="@+id/xuanzetupain"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:textColor="#bfbfbf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加图片(最多6张)"
            />
    </RelativeLayout>
    <RelativeLayout
         android:layout_marginTop="20dp"
        android:id="@+id/diwuge"
        android:layout_toRightOf="@id/disige"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="45dip"
            android:layout_height="45dip"
            android:layout_centerInParent="true"
            android:src="@drawable/bg" />
        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:src="@drawable/plus" />
    </RelativeLayout>
<RelativeLayout
    android:id="@+id/diliuge"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <Button
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:id="@+id/zhouji_subbmie"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="发布"
        android:layout_alignParentBottom="true"
        android:textColor="#FFFFFF"
        android:textSize="18dp"

        android:background="@drawable/denglustykle"
        />
</RelativeLayout>

   </RelativeLayout>
</RelativeLayout>