<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hehfe="http://schemas.android.com/apk/res-auto"
    android:id="@+id/leftLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="30dip"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <com.example.a11699.graduatemanager.circle.CirvleImageView
                android:id="@+id/lef_saq"
                android:layout_width="50dp"
                android:layout_height="50dp"
                hehfe:border_color="#FFFFFF"
                />
            <TextView
                android:id="@+id/shoudaoMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/lef_saq"
                android:background="@drawable/ease_chatfrom_bg_normal"
                android:gravity="center|center_vertical"
                android:maxWidth="220dp"
                android:padding="16dp"
                android:text="发送消息"
                android:textSize="16dp" />

            <com.facebook.drawee.view.DraweeView
                android:id="@+id/leftimage"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:layout_toRightOf="@+id/shoudaoMessage"
                android:maxWidth="220dp"
                android:visibility="gone" />
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
