<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/qweasd"
    tools:context=".activity.zhouhistoryActivity">
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        ></View>
    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/zhouji_history_tab"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#6D8FB0"
        tl:tl_iconHeight="23dp"
        tl:tl_iconWidth="23dp"
        tl:tl_indicator_color="#2C97DE"
        tl:tl_indicator_height="0dp"
        tl:tl_textSelectColor="#ffffff"
        tl:tl_textUnselectColor="#66000000"
        tl:tl_textsize="12sp"
        tl:tl_underline_color="#DDDDDD"
        tl:tl_underline_height="1dp"/>
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/zhouji_history_viewtab"
        ></android.support.v4.view.ViewPager>
</LinearLayout>